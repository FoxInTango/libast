PREPARE_TARGETS += prepare.libecho
PREPARE_URL_libecho = https://github.com/FoxInTango/libecho.git
ifdef REMOTE_ALL_IN_ONE
PREPARE_URL_libecho = wf@allinone.io:alpine/libecho.git
endif
PREPARE_DIR_libecho = $(DEPENDS_LIBRARY_PATH)/$(basename $(notdir $(PREPARE_URL_libecho)))
prepare.libecho:
	-git clone $(PREPARE_URL_libecho) $(PREPARE_DIR_libecho)
	-echo "SUPER_MAKE_DIR=${MAKE_FILE_DIR}"                >> $(PREPARE_DIR_libecho)/.make/super
	-echo "SUPER_MAKE_CONFIG_DIR=${MAKE_CONFIG_DIR}"       >> $(PREPARE_DIR_libecho)/.make/super
	-cd $(PREPARE_DIR_libecho) && make prepare
	-rm $(PREPARE_DIR_libecho)/.make/super
